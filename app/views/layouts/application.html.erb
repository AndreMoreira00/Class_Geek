<!DOCTYPE html>
<html>
  <head>
    <title>Classgeek</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <%= link_to "ClassGeek", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Turmas", turmas_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "Teewt", teewts_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "YYY", turmas_path, class:"nav-link active" %>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbarNav">
          <% if user_signed_in? %>
            <li class="nav-item"> <%= link_to "Sair", destroy_user_session_path, method: :delete, class:"btn btn-danger" %> </li>
          <% else %>
          <li class="nav-item"> <%= link_to "Entrar", new_user_session_path, class:"btn btn-success" %> </li>

          <li class='nav-item'> <%= link_to "Cadastre-se", new_user_registration_path, class:"btn btn-primary" %> </li>
          <% end %>
        </div>
      </div>
    </nav>
    <% flash.each do |notice,messages| %>
      <%= content_tag(:div, messages, class: "alert alert-info #{notice}") %>
    <% end %>

    <%= yield %>
    <%= link_to "Home", root_path %>
    <%= link_to "Index", index_path %>
  </body>
</html>
